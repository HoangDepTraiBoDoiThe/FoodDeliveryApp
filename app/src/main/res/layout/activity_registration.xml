<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.LoginSignin.RegistrationActivity"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg9"
            android:foreground="@drawable/foreground_design"
            android:scaleType="centerCrop"
            android:id="@+id/imageView2"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="16dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:fontFamily="@font/lobster"
                android:textColor="@color/white"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="Los Pollos Hermanaos"
                />

        <TextView
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:id="@+id/textView6"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                />

        <EditText

            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/edtEmailReg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Email" />

        <EditText
            android:layout_marginTop="10dp"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:id="@+id/edtPasswordReg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Password" />

        <EditText
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:id="@+id/edtAddressReg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"

                android:ems="10"
                android:inputType="text"
                android:hint="Address" />

        <EditText
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:id="@+id/edtPhoneReg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|text"
                android:hint="Phone numb"
                />


        <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/register"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent=".8"
                android:id="@+id/btnReg"
                android:background="@drawable/btn_gb_design"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/searchEditText"
                />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Already Register ?" />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/txvLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/purple_500"
                android:text="Login" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>